<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TaxiActivity">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <RadioButton android:id="@+id/radio_regular_pillow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Tube Pillow(Pillow on the bed at the moment)"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_natural_pillow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pillow with natural fill(for people which are suffering from alergies)"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <Button
        android:id="@+id/sendPillowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:enabled="true"
        android:text="SEND REQUEST"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/notificationText"
        android:layout_marginTop="300dp"
        android:text ="Your request has been send"
        android:visibility="invisible"
        />
</RelativeLayout>